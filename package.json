    "@types/express": "^4.17.11",
    "@types/lodash.debounce": "^4.0.6",
    "@types/morgan": "^1.9.2",
    "@types/react": "^17.0.6",
    "@types/react-dom": "^17.0.5",
    "autoprefixer": "^10.2.5",
    "concurrently": "^6.1.0",
    "nodemon": "^2.0.7",
    "postcss": "^8.2.15",
    "postcss-cli": "^8.3.1",
