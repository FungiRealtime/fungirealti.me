    "@remix-run/node": "^0.17.2",
    "@remix-run/react": "^0.17.2",
    "algoliasearch": "^4.9.1",
    "compression": "^1.7.4",
    "date-fns": "^2.21.3",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "lodash.debounce": "^4.0.8",
    "mdx-bundler": "^4.0.0",
    "morgan": "^1.10.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intersection-observer": "^8.32.0",
    "react-router-dom": "^6.0.0-beta.0",
    "remark-autolink-headings": "^6.0.1",
    "remark-gfm": "^1.0.0",
    "remark-prism": "^1.3.6",
